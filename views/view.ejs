

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body{
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
        }
        table{
            border-style: solid;
            
        }
        table, th, td {
            border: 1px solid;
        }
        th, td {
            padding: 15px;
            text-align: center;
        }
    </style>
<body>
    <h1>Data from MongoDB</h1>
    <div>
     %>
        <% if (locals.users) { %>
            <table>
                <thead>
                    <th>Sl. No</th>
                    <th>id </th>
                    <th>First_Name</th>
                    <th>Last_Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Job_Title</th>
                </thead>
                <tbody>
                    <% users.forEach((user, index )=> { %>
                        <tr>
                            <% let id = JSON.stringify(user._id) %>
                            <% id = id.slice(0, -1) %>
                            <% console.log(id) %>
                            <td><%= index + 1 %></td>
                            <td><%= id.slice(-5) %></td>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.gender %></td>
                            <td><%= user.job_title %></td>
                        </tr>
                       
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html> 